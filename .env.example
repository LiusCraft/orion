# AI 助手 环境变量配置 (.env 示例)

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_NAME=cdnagent
DB_SSLMODE=disable
DB_TIMEZONE=UTC

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM配置
LLM_PROVIDER=claude
LLM_MODEL=claude-3-sonnet-20240229
LLM_API_KEY=your-llm-api-key
LLM_BASE_URL=

# JWT密钥
JWT_SECRET=your-jwt-secret-here

# Grafana 配置(可选)
GRAFANA_BASE_URL=
GRAFANA_API_KEY=

# Elasticsearch 配置(可选)
ELASTIC_URL=
ELASTIC_USERNAME=
ELASTIC_PASSWORD=

# CDN 配置(可选)
CDN_BASE_URL=
CDN_API_KEY=
